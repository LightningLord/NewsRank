<div class="login-wrapper">
  <h2 class="login-heading">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-login-wrapper">
    <center><p>No worries, we'll send you a new one!</p></center>
    <div>
    <%= f.email_field :email, autofocus: true, placeholder: "Email" %></div>
    <div><%= f.submit "Reset Password", class: "button-sign-in" %></div>
    <center>Don't have and account yet? <%= link_to "Create an account", new_registration_path(resource_name) %></center>
  </div>
<% end %>
</div>
