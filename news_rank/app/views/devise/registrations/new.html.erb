<div class="login-wrapper">
  <h2 class="login-heading">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-login-wrapper">
    <%= devise_error_messages! %>

    <div>
    <%= f.email_field :email, autofocus: true, placeholder: "Email" %></div>

    <div>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></div>

    <div>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
      </div>

    <div><%= f.submit "Submit", class: "button-sign-in" %></div>
    <center><span>Already have an account?</span><%= render "devise/shared/links" %></center>
    </div>
  <% end %>
</div>

