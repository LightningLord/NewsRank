<div class="login-wrapper">
  <h2 class="login-heading">sign in now</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-login-wrapper">
      <div>
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %></div>
      <div>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password"%>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="remember-me">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %> <span class="pull-right"><%= link_to "Forgot password?", new_password_path(resource_name) %></span>
        </div>
      <% end -%>

      <div><%= f.submit "Sign in", class: "button-sign-in" %></div>
      <center>Don't have and account yet? <%= link_to "Create an account", new_registration_path(resource_name) %></center>
    </div>
  <% end %>

</div>